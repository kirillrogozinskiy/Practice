@model IEnumerable<WatchList.Models.WatchItem>

@{
    ViewData["Title"] = "Мой список просмотра";
}

@if (TempData["Notification"] != null)
{
    <div class="alert alert-success">@TempData["Notification"]</div>
}

<h1>Мой список просмотра</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить новый элемент</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Тип</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Изменить</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <h4>Фильтр по статусу:</h4>
    <a asp-action="ByStatus" asp-route-status="Запланировано" class="btn btn-outline-primary">Запланировано</a>
    <a asp-action="ByStatus" asp-route-status="Смотрю" class="btn btn-outline-warning">Смотрю</a>
    <a asp-action="ByStatus" asp-route-status="Просмотрено" class="btn btn-outline-success">Просмотрено</a>
</div>