<Window x:Class="WpfApp.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Имя пользователя:"/>
        <TextBox Grid.Row="1" Margin="0,5" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="2" Text="Пароль:" Margin="0,10,0,0"/>
        <PasswordBox x:Name="passwordBox" Grid.Row="3" Margin="0,5"/>

        <TextBlock Grid.Row="4" Text="Отдел:" Margin="0,10,0,0"/>
        <ComboBox Grid.Row="5" Margin="0,5" ItemsSource="{Binding Departments}" SelectedItem="{Binding Department}"/>

        <Button Grid.Row="6" Content="Зарегистрироваться" Width="120" Margin="0,10" HorizontalAlignment="Right" 
                Command="{Binding RegisterCommand}" CommandParameter="{Binding ElementName=passwordBox}"/>
    </Grid>
</Window>